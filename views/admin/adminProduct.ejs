    <div class="flex justify-end">
    <button class="text-white rounded bg-red-900 m-3 p-3 py-2 ">
        <a href="/admin/product/add">Add Product</a>
    </button>
    </div> 
    <table id="productTable" class="m-20 p-2 align-items-center border border-red-900 rounded mb-2">
        <thead style="background-color: rgb(119, 45, 11); color: white;">
            <tr>
                <th>Sl.No</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (message && message.length > 0) { %>
                <% for (let i = 0; i < message.length; i++) { %>
                    <tr>
                        <td class="px-2"><%= i + 1 %></td>
                        <td class="px-8"><%= message[i].productName %></td>
                        <td class="px-8"><%= message[i].productPrice %></td>
                        <td class="px-8"><%= message[i].productQuantity %></td>
                        <td class="px-8"><%= message[i].productCategory ? message[i].productCategory.categoryName : 'N/A' %></td>
                        <td class="px-10">
                            <a href="/admin/product/edit?id=<%= message[i]._id %>">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                        </td>
                        <td class="px-8">
                            <a href="/admin/product/delete?id=<%= message[i]._id %>" onclick="return confirm('Are you sure you want to delete this product?');">
                                <i class="fa-solid fa-trash text-danger"></i>
                            </a>
                        </td>
                    </tr>
                <% } %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center">No products found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    
  

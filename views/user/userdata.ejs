document.getElementById('addressForm').addEventListener('submit', function(e) {
    e.preventDefault(); // Prevent form submission for validation check
    
    // Name validation
    const name = document.getElementById('contactname').value;
    const nameError = document.getElementById('nameError');
    const nameRegex = /^[A-Za-z\s]+$/; // Regex to allow letters and spaces
    nameError.textContent = ''; // Clear previous error message

    if (!name) {
        nameError.textContent = 'Name is required.';
        return false; // Stop submission if validation fails
    } else if (!nameRegex.test(name)) {
        nameError.textContent = 'Name can only contain letters and spaces.';
        return false;
    }

    // Phone number validation
    const phoneNumber = document.getElementById('phoneNumber').value;
    const phoneError = document.getElementById('phoneError');
    phoneError.textContent = ''; // Clear previous error message

    if (!phoneNumber) {
        phoneError.textContent = 'Phone number is required.';
        return false; // Stop submission if validation fails
    } else if (!/^\d{10}$/.test(phoneNumber)) {
        phoneError.textContent = 'Phone number must be exactly 10 digits.';
        return false;
    }

    // If both validations pass, submit the form
    e.target.submit(); // Form will be submitted if everything is valid
});
document.addEventListener('DOMContentLoaded', function() {
      const modal = document.getElementById('flashMessageModal');
      const closeModalBtn = document.getElementById('modalCloseBtn');
      const closeX = document.getElementById('closeModal');
  
      // Show modal if there's a flash message
      <% if (message.error || message.success) { %>
        modal.classList.remove('hidden');
      <% } %>
  
      // Close the modal when "Close" button or "X" is clicked
      closeModalBtn.addEventListener('click', function() {
        modal.classList.add('hidden');
      });
  
      closeX.addEventListener('click', function() {
        modal.classList.add('hidden');
      });
    });
    document.getElementById('profileEdit').addEventListener('click', function() {
        const profileForm = document.getElementById('profileForm');
        
        // Toggle the "hidden" class to show/hide the form
        if (profileForm.classList.contains('hidden')) {
            profileForm.classList.remove('hidden');
        } else {
            profileForm.classList.add('hidden');
        }
    });

    function validatePhoneNumber() {
        const phonenoInput = document.getElementById('phoneno');
        const phonenoError = document.getElementById('phonenoError');
        const phoneno = phonenoInput.value;

        // Reset error message
        phonenoError.textContent = '';

        // Validate the length of the phone number
        if (phoneno.length !== 10) {
            phonenoError.textContent = 'Phone number must be 10 digits long.';
            return false; // Prevent form submission
        }

        // Check if the number is numeric
        if (!/^\d+$/.test(phoneno)) {
            phonenoError.textContent = 'Phone number must be numeric.';
            return false; // Prevent form submission
        }

        return true; // Allow form submission
    }

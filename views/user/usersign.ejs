            const form = document.getElementById('form');
const name = document.getElementById('name');
const password = document.getElementById('password');
const confirmpassword = document.getElementById('confirmpassword');
const email = document.getElementById('email');

// Error spans
const nameError = document.getElementById('nameError');
const emailError = document.getElementById('emailError');
const passwordError = document.getElementById('passwordError');
const confirmPasswordError = document.getElementById('confirmPasswordError');

form.addEventListener('submit', (e) => {
  let isValid = true;

  // Clear previous error messages
  nameError.textContent = '';
  emailError.textContent = '';
  passwordError.textContent = '';
  confirmPasswordError.textContent = '';

  // Name validation
  if (name.value === '' || name.value == null) {
    nameError.textContent = 'Name is required';
    isValid = false;
  } else if (!name.value.match(/^[A-Za-z]+(\s[A-Za-z]+)?$/)) {
    nameError.textContent = 'Proper full name is required';
    isValid = false;
  } else if (name.value.length < 3) {
    nameError.textContent = 'Name must be at least 3 characters long';
    isValid = false;
  } else if (name.value.length > 20) {
    nameError.textContent = 'Name must be less than 20 characters';
    isValid = false;
  }

  // Email validation
  if (email.value === '' || email.value == null) {
    emailError.textContent = 'Email is required';
    isValid = false;
  } else if (!email.value.match(/^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/)) {
    emailError.textContent = 'Enter a valid email address';
    isValid = false;
  }

  // Password validation
  if (password.value !== confirmpassword.value) {
    confirmPasswordError.textContent = 'Passwords must match';
    isValid = false;
  } else if (password.value === '' || password.value == null || password.value === "password") {
    passwordError.textContent = 'Enter a valid password';
    isValid = false;
  } else if (password.value.length < 8 || password.value.length > 15) {
    passwordError.textContent = 'Password must be between 8 and 15 characters';
    isValid = false;
  } else if (!password.value.match(/^[A-Za-z0-9*#@%]{8,16}$/)) {
    passwordError.textContent = 'Password must contain letters, numbers, and special characters (*, #, @, %)';
    isValid = false;
  }

  if (!isValid) {
    e.preventDefault();  // Prevent form submission if validation fails
  }
});

